<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/rabbitOrdersTl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/appBlue"
        app:tabIndicatorHeight="1dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/appBlack"
        app:tabTextColor="@color/appGray"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/rabbitOrdersVp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rabbitOrdersTl"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/rabbitOrdersBottomImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/rabbit_order_map_img"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>