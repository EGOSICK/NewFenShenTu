<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="480dp"
        android:layout_height="800dp"
        android:src="@mipmap/share_red_pack"/>

        <TextView
            android:text="aaaaaaaaaaaaaaaaaaaaa"
            android:id="@+id/shareRedPacketAddressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>

        <TextView
            android:text="ddddddddddddddddddddddddddddd"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/shareRedPacketAddressTv"
            android:id="@+id/shareRedPacketMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>


</RelativeLayout>