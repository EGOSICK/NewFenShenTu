<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:toggle="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/appSGray"
              android:orientation="vertical">

    <include layout="@layout/title_view"/>

    <View
        style="@style/HorizontalLine"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                style="@style/setting_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示音"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/setting_bg"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="声音提醒"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/settingTb"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    toggle:tbAsDefaultOn="true"
                    toggle:tbBorderWidth="0.5dp"
                    toggle:tbOffBorderColor="@color/appSGray"
                    toggle:tbOffColor="@color/appSGray"
                    toggle:tbOnColor="@color/appBlue"
                    toggle:tbSpotColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                style="@style/setting_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareFriendsView"
                style="@style/setting_bg"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享好友"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                style="@style/setting_bg"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dataCleanView"
                style="@style/setting_bg"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/updateView"
                style="@style/setting_bg"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本更新"
                    android:layout_weight="1"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/version"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/setting_bg">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logOutView"
                style="@style/setting_bg"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>