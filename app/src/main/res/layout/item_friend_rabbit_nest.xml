<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/filled_white_bg_no_wk"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.xiandong.fst.view.customview.CircularImageView
                android:id="@+id/itemFriendRNUserPhotoImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/itemFriendRNUserNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#FF454545"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/itemFriendRNUserZuTv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>


            <TextView
                android:id="@+id/itemFriendRNUserDistanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#FF979797"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            style="@style/HorizontalLine"
            android:background="#FFE7E8E4"/>

        <LinearLayout
            android:id="@+id/itemFriendRNOtherView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemFriendRNOtherPhoneImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_phone"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNOtherChatImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_chat"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNOtherYueImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_meet"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNOtherLocationImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_location"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNUserCardImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_people"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemFriendRNMeView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/itemFriendRNMeOrdersImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_me_one"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNMePurseImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_me_two"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNMeChatImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_chat"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNMeRabbitImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_me_foru"/>
        </LinearLayout>
        <!-- ================================= -->

        <LinearLayout
            android:id="@+id/itemFriendRNZuView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/itemFriendRNZuChatImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_rn_chat"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNZuDetailsImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_zu_details"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNZuDaoHangImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_zu_dao_hang"/>

            <View
                style="@style/VerticalLine"
                android:background="#FFE7E8E4"/>

            <ImageView
                android:id="@+id/itemFriendRNZuLogoutImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/item_friends_zu_logout"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/tag"
        android:visibility="gone"
        android:src="@mipmap/item_friend_card_jiao"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

</RelativeLayout>