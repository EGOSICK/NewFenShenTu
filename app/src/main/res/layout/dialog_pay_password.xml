<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="350dp"
              android:layout_height="match_parent"
              android:background="@drawable/filled_white_bg_no_wk"
              android:orientation="vertical"
              android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogPayPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入密码"
            android:textColor="@color/appBlack"
            android:textSize="18sp"/>

        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/dialogPayPasswordEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:focusable="true"
            android:clickable="true"
            app:gpvGridColor="@color/white"
            app:gpvLineColor="@color/appGray"
            app:gpvLineWidth="1dp"
            app:gpvPasswordLength="6"
            app:gpvPasswordType="numberPassword"
            app:gpvTextColor="@color/black"
            app:gpvTextSize="20sp"/>
    </LinearLayout>


</LinearLayout>