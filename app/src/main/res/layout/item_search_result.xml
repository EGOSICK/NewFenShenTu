<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

    <ImageView
        android:id="@+id/searchResultResultImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/searchResultResultImg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/searchResultResultTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="dasdasd"
            android:textColor="@color/appBlack"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/searchResultResultContentTv"
            style="@style/marquee_text"
            android:text="asdasdasd"/>
    </LinearLayout>
</RelativeLayout>